{
	"name": "storage",
	"version": "0.0.1",
	"description": "",
	"main": "app.js",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts && npm run tslint",
		"serve": "ts-node dist/app.js",
		"watch-ts": "tsc -w",
		"build-ts": "tsc",
		"tslint": "tslint -c tslint.json -p tsconfig.json --fix",
		"debug": "npm run build && npm run watch-debug",
		"watch-node": "nodemon --inspect --exec \"ts-node dist/app.js\"",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"Compile,Run\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ajpauwels/storage.git"
	},
	"author": "Alexandre Pauwels",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/ajpauwels/storage/issues"
	},
	"homepage": "https://github.com/ajpauwels/storage#readme",
	"dependencies": {
		"async": "^2.6.1",
		"bluebird": "^3.5.1",
		"express": "^4.16.3",
		"express-validator": "^5.2.0",
		"fast-json-patch": "^2.0.6",
		"mongoose": "^5.1.4",
		"winston": "^3.0.0-rc6"
	},
	"devDependencies": {
		"@types/async": "^2.0.49",
		"@types/bluebird": "^3.5.20",
		"@types/express": "^4.16.0",
		"@types/mongoose": "^5.0.15",
		"ts-node": "^6.1.1",
		"typescript": "^2.9.2"
	}
}
